name:           yumeserver
version:        0.1.0.0
description:    My Reflex Game Project Hopefully
homepage:       https://github.com/aidatorajiro/Prophyan#readme
bug-reports:    https://github.com/aidatorajiro/Prophyan/issues
author:         doushiyoukana
maintainer:     kawarusosu@zoho.com
copyright:      2023 doushiyoukana
license:        MIT
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10

extra-source-files:
    README.md

source-repository head
  type: git
  location: https://github.com/aidatorajiro/Prophyan

library
  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5
    , Yampa
    , lens
    , aeson
    , aeson-casing
    , websockets
    , bytestring
    , stm
    , time
  exposed-modules:
      LibMain
      GameData
  other-modules:
      Paths_yumeserver
  default-language: Haskell2010

executable yumeserver-exe
  main-is: Main.hs
  hs-source-dirs:
      app
  ghc-options:
  build-depends:
      yumeserver
    , base >=4.7 && <5
  other-modules:
      Paths_yumeserver
  default-language: Haskell2010
